@model VehicleMvcDemo.Models.Vehicle

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Vehicle</h1>

<span style="color: #d9534f;"><b>Are you sure you want to delete this vehicle?</b></span>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleMake)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VehicleMake)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleModel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VehicleModel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleYear)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VehicleYear)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleVin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VehicleVin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleNote)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VehicleNote)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="VehicleId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <input type="submit" value="Back to List" asp-action="Index" class="btn btn-primary"/>
    </form>
</div>
